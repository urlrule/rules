use MyPlace::HTTPGet;
use HTML::TreeBuilder;
use MyPlace::HTML::Convertor;
binmode STDOUT,'utf8';
binmode STDERR,'utf8';
#use MyPlace::HTML;

sub _process {
    my ($url,$rule,$html) = @_;
    my $title = undef;
    my @data;
    my @pass_data;
    my $tree = HTML::TreeBuilder->new();
    $tree->parse($html);
    $tree->eof;
    my ($content) = $tree->look_down('_tag','span','id','GuArticleContent');    
    my $file;
    if($content) {
        $content = text_from_node($content);
        push @data,@{$content} if($content);
        ($file) = $tree->look_down('_tag','title');
        if($file) {
            $file = $file->as_text;
            $file =~ s/\s*-[^-]+-[^-]+$//;
            $file = $file . '.txt'; 
        }
    }
    $tree->delete;
    #my @html = split(/\n/,$html);
    return (
        file=>$file,
        count=>scalar(@data),
        data=>[@data],
        pass_count=>scalar(@pass_data),
        pass_data=>[@pass_data],
        base=>$url,
        no_subdir=>1,
        work_dir=>$title,
    );
}

sub apply_rule {
    my $url = shift(@_);
    my $rule = shift(@_);
    my $http = MyPlace::HTTPGet->new();
    my (undef,$html) = $http->get($url,'charset:gbk');
    return &_process($url,$rule,$html,@_);
}

1;

